@inherits LayoutComponentBase
@inject NavigationManager Nav
@inject JournalApp.Services.AuthService Auth

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        var hasPin = await Auth.HasPinAsync();
        var unlocked = Preferences.Get("is_unlocked", false);

        // If PIN exists and user is not unlocked → force login
        if (hasPin && !unlocked && !Nav.Uri.Contains("/login"))
        {
            Nav.NavigateTo("/login", true);
        }
    }
}
